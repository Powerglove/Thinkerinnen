<h1>Listing thinkers</h1>

<div class="center jumbotron">

   <table class="table table-hover">
    <tr>
      <th>Name</th>
      <th>Email</th>
    </tr>
   
    <% @thinkers.each do |thinker| %>
      
        <tr>
          <td><%= thinker.name %></td>
          <td><%= thinker.email %></td>
          <td><%= link_to 'Show', thinker_path(thinker) %></td>
          <td><%= link_to 'Edit', edit_thinker_path(thinker) %></td>
          <td><%= link_to 'Destroy', thinker_path(thinker),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
        </tr>
      
    <% end %>
  </table>

</div>

<p><%= link_to 'New Thinker', new_thinker_path %></p>